		<record model="ir.actions.report" id="resumen_orden_reparto_action">
			<field name="name">Resumen de Reparto</field>
			<field name="model">stock.picking.batch</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">picking_personalizacion.orden_reparto_resumen</field>
