<odoo>
	<data>
		<template id="picking_personalizacion.orden_reparto_resumen">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="web.external_layout">
                        <div class="page">
                            <div class="d-flex">
                                <div><h3>Orden de Reparto - Resumen</h3></div>
                                
                            </div>
                             <div class="d-flex">
                                <div><h3><span t-field="o.name"/></h3></div>
                                <div class="me-auto">
                                    <div t-field="o.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 150, 'img_style': 'width:300px;height:50px;'}"/>
                                </div>
                            </div>
                            <!-- <div class="row justify-content-end mb16">
                                <div class="col-4" name="right_box">
                                    <div t-field="o.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6" name="div_outgoing_address">
                                    <div t-if="o.picking_ids.should_print_delivery_address()">
                                        <span><strong>Dirección de entrega:</strong></span>
                                        <div t-field="o.picking_ids.move_ids[0].partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                    <div t-elif="o.picking_type_id.code != 'internal' and o.picking_type_id.warehouse_id.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                        <div t-field="o.picking_ids.picking_type_id.warehouse_id.partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                                <div class="col-5 offset-1" name="div_incoming_address">
                                    <t t-set="show_partner" t-value="False" />
                                    <div t-if="o.picking_ids.picking_type_id.code=='incoming' and o.partner_id">
                                        <span><strong>Vendor Address:</strong></span>
                                        <t t-set="show_partner" t-value="True" />
                                    </div>
                                   <div t-if="o.picking_ids.picking_type_id.code=='internal' and o.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                        <t t-set="show_partner" t-value="True" />
                                     <div t-if="o.picking_ids.picking_type_id.code=='outgoing' and o.partner_id and o.partner_id != o.partner_id.commercial_partner_id">
                                        <span><strong>Customer Address:</strong></span>
                                        <t t-set="show_partner" t-value="True" />
                                    </div>
                                    </div>
                                     <div t-if="show_partner" name="partner_header">
                                        <div t-field="o.picking_ids.partner_id.commercial_partner_id"
                                             t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                            </div> -->
                            <t t-set="total_principal" t-value="0" />
                            <t t-set="total_recuento"  t-value="[]" />
                            <t t-set="processed_ids1" t-value="set()" />
                            <t t-foreach="o.move_line_ids" t-as="move">
                                <t t-foreach="move.picking_id.sale_id.invoice_ids.filtered(lambda i: i.state == 'posted' and i.id not in processed_ids1)" t-as="c">
                                    <t t-set="total_principal" t-value="total_principal + c.amount_residual" />
                                    <t t-set="processed_ids1" t-value="processed_ids1.union([c.id])"/>

                                </t>
                                <t t-foreach="move.picking_id.sale_id.invoice_ids.filtered(lambda i: i.state == 'posted')" t-as="c">
                                    <!-- <span t-field="c.amount_residual"/> -->
                                    <t t-if="c.id not in total_recuento">
                                        <t t-set="total_recuento" t-value="total_recuento + [c.id]" />
                                    </t>
                                </t>
                            </t>
                            <br></br>
                            <div class="row mt32 mb32">
                                <div class="col-auto mw-100 mb-3">
                                    <strong>Responsable</strong>:<br/>
                                    <span t-field="o.user_id"/>

                                </div>
                                <div class="col-auto mw-100 mb-3">
                                    <strong>Tipo de operación</strong>:<br/>
                                    <span t-field="o.picking_type_id"/>

                                </div>
                                 <div class="col-auto mw-100 mb-3">
                                    <strong>Fecha prevista</strong>:<br/>
                                    <span t-field="o.scheduled_date"/>

                                </div>
                            
                            </div>
                            <div class="row mt32 mb32">
                               
                                <div class="col-auto mw-100 mb-3">
                                    <strong>Repartidor</strong>:<br/>
                                    <span t-field="o.repartidor"/>
                                </div>
                                <div class="col-auto mw-100 mb-3">
                                    <strong>Recuento de facturas</strong>:<br/>
                                    <t t-esc="len(total_recuento)" />

                                </div>
                                <div class="col-auto mw-100 mb-3">
                                    <strong>Monto total de facturas</strong>:<br/>
                                    <t t-esc="'{0:,.0f}'.format(int(total_principal)).replace(',','.')" />

                                </div>
                            </div>
                            <div class="row mt32 mb32">
                                
                               
                            </div>
                            <br/>
                            
                        
                            <br></br>
                            
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Albarán</th>
                                        <th>N° pedido de venta</th>
                                        <th>Nombre del cliente</th>
                                        <th>Nro Factura</th>
                                        <th>Importe</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="total" t-value="0" />
                                    <t t-set="processed_ids" t-value="set()" />
                                    <t t-foreach="sorted(o.move_line_ids, key=lambda x: x.picking_id.sale_id.invoice_ids.filtered(lambda i: i.state == 'posted' and i.id not in processed_ids)[0].name)" t-as="move">
                                        <t t-foreach="move.picking_id.sale_id.invoice_ids.filtered(lambda i: i.state == 'posted' and i.id not in processed_ids)" t-as="c">

                                            <tr >
                                                <td>
                                                    <span t-field="move.picking_id"/>
                                                </td>
                                                <td>
                                                    <span t-field="move.origin"/>

                                                </td>
                                                <td>
                                                    <span t-field="c.partner_id.nombre_fantasia"/>

                                                </td>
                                                <td>
                                                    <span t-field="c.name"/>

                                                </td>
                                                <td>
                                                    <span t-field="c.amount_residual"/>
                                                    <t t-set="total" t-value="total + c.amount_residual" />

                                                </td>
                                                
                                            </tr>
                                            <t t-set="processed_ids" t-value="processed_ids.union([c.id])"/>
                                        </t>    
                                    </t>
                                    <tr >
                                        <td>
                                        </td>
                                        <td>

                                        </td>

                                        <td>
                                            Total
                                        </td>
                                        <td>
                                           <t t-esc="'{0:,.0f}'.format(int(total)).replace(',','.')" />

                                        </td>
                                        
                                    </tr>
                                </tbody>
                            </table>
                        </div>

    
					</t>
				</t>
			</t>
		</template>

