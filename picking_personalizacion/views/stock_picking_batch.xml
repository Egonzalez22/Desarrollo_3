<odoo>
    <record id="batch_id" model="ir.ui.view">
        <field name="name">batch.id</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="repartidor" />
            </xpath>
             <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="location_id" />
            </xpath>
             <xpath expr="//field[@name='repartidor']" position="after">
                <field name="location_dest_id" readonly="0"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="after">
                <!-- <field name="total_factura" readonly="1"/> -->
                <field name="total_factura" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>