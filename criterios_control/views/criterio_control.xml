<odoo>
    <record id="view_criterio_control_form" model="ir.ui.view">
        <field name="name">criterio.control.form</field>
        <field name="model">criterios.control</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="uom_control"/>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_criterio_control_tree" model="ir.ui.view">
        <field name="name">view.criterio.control.tree</field>
        <field name="model">criterios.control</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="uom_control"/>
            </tree>
        </field>
    </record>

    <record id="action_criterios_control" model="ir.actions.act_window">
        <field name="name">Criterios de Control</field>
        <field name="res_model">criterios.control</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
    id="menu_criterios_control"
    name="Criterios de Control"
    action="action_criterios_control"
    parent="quality_control.menu_quality_configuration"
    sequence="15"/>

</odoo>
