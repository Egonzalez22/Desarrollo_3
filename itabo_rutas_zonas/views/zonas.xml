<odoo>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="itabo_zonas_itabo_zonas_form">
        <field name="name">itabo_zonas.itabo_zonas.form</field>
        <field name="model">itabo_zonas.itabo_zonas</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol -->
    <record id="itabo_zonas_itabo_zonas_tree" model="ir.ui.view">
        <field name="name">itabo_zonas.itabo_zonas.tree</field>
        <field name="model">itabo_zonas.itabo_zonas</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Zonas de Rutas">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="itabo_zonas_itabo_zonas_action_window">
        <field name="name">Zonas de Rutas</field>
        <field name="res_model">itabo_zonas.itabo_zonas</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crear una nueva zona de ruta</p>
        </field>
        <field name="target">current</field>
    </record>

    <!-- Menú -->
    <menuitem id="itabo_zonas" name="Zonas de Rutas" parent="contacts.res_partner_menu_config" action="itabo_zonas_itabo_zonas_action_window"/>

</odoo>
