<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- model.name form view -->
        <record id="wizard_form" model="ir.ui.view">
            <field name="name">wizard_form</field>
            <field name="model">informes_inventario.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="fecha_inicio" />
                                <field name="fecha_fin" />
                                <field name="stock_adj" />
                                <field name="company_id" invisible="1" />
                            </group>
                        </group>
                        <footer>
                            <button string="Imprimir reporte" type="object" name="print_report"
                                class="oe_highlight" />
                            <button string="Cancelar" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- model.name action window -->
        <record id="wizard_action_window" model="ir.actions.act_window">
            <field name="name">Informe Ajustes de inventario</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">informes_inventario.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_wizard" name="Informe Ajustes de inventario"
            parent="stock.menu_warehouse_report" action="wizard_action_window" sequence="100" />

    </data>


</odoo>
