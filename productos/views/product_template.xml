<odoo>
	<data>

		<record id="product_template_only_form_view_productos" model="ir.ui.view">
			<field name="name">product.template.only.form.view.productos</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view" />
			<field name="arch" type="xml">

				<!-- Agregamos el atributo marcas -->
				<xpath expr="//field[@name='categ_id']" position="after">
					<field name="marcas_ids" widget="many2many_tags" options="{'no_create':True}" />
				</xpath>


			</field>
		</record>


	</data>
</odoo>